#!/bin/bash

smp="-smp 4,sockets=1,cores=4"
mem="-m 4g"
net=virtio-net-pci
export br=eth-br
printf -v mac '52:54:%02x:%02x:%02x:%02x' $(($RANDOM & 0xff)) $(($RANDOM & 0xff)) $(($RANDOM & 0xff)) $(($RANDOM & 0xff))
args=()
non=""

mkdir -p /var/run/qemu-wrapper/
mac_history=/var/run/qemu-wrapper/mac_address
touch $mac_history

while test $# -gt 0; do
  case $1 in
  -name)
    mac_addr=$(grep "^$2=" $mac_history | cut -d "=" -f 2)
    if [ -z "$mac_addr" ]; then
      echo "$2"="$mac" >> $mac_history
    else
      mac="$mac_addr"
    fi
    args+=("$1")
    ;;
  -smp)
    smp=""
    args+=("$1")
    ;;
  -m)
    mem=""
    args+=("$1")
    ;;
  -nat)
    br=virbr0
    ;;
  -enet)
    net=e1000e
    ;;
  -non)
    non=true
    ;;
  -rvd)
    args+=("-drive")
    args+=("file=$(readlink -f "$2"),format=raw,if=virtio")
    shift
    ;;
  -rsd)
    args+=("-drive")
    args+=("file=$(readlink -f "$2"),format=raw")
    shift
    ;;
  -qvd)
    args+=("-drive")
    args+=("file=$(readlink -f "$2"),format=qcow2,if=virtio")
    shift
    ;;
  -spi)
    args+=("-vga")
    args+=("qxl")
    args+=("-spice")
    args+=("port=$2,addr=0.0.0.0,disable-ticketing")
    args+=("-device")
    args+=("virtio-serial-pci,id=virtio-serial0")
    args+=("-chardev")
    args+=("spicevmc,id=charchannel0,name=vdagent")
    args+=("-device")
    args+=("virtserialport,bus=virtio-serial0.0,chardev=charchannel0,id=channel0,name=com.redhat.spice.0")
    args+=("-device")
    args+=("qemu-xhci,id=usb")
    args+=("-chardev")
    args+=("spicevmc,id=charredir0,name=usbredir")
    args+=("-device")
    args+=("usb-redir,chardev=charredir0,id=redir0,bus=usb.0,port=1")
    args+=("-chardev")
    args+=("spicevmc,id=charredir1,name=usbredir")
    args+=("-device")
    args+=("usb-redir,chardev=charredir1,id=redir1,bus=usb.0,port=2")
    usb=",usb=off"
    shift
    ;;
  *)
    args+=("$1")
    ;;
  esac
  shift
done

two_free_port=$(comm -23 <(seq 49152 65535 | sort) <(ss -Htan | awk '{print $4}' | cut -d':' -f2 | sort -u) | shuf | head -n 2)
telnet=$(echo $two_free_port | cut -d " " -f 1)
tcp=$(echo $two_free_port | cut -d " " -f 2)

if [ -z "$non" ]; then
  args+=("-netdev")
  args+=("tap,id=tap0")
  args+=("-device")
  args+=("$net,id=eth,netdev=tap0,mac=$mac")
else
  args+=("-nic")
  args+=("none")
fi

qemu-system-x86_64 $smp $mem -machine q35,accel=kvm"$usb" -cpu host -rtc base=localtime -monitor telnet:0.0.0.0:"$telnet",server,nowait -monitor tcp:0.0.0.0:"$tcp",server,nowait "${args[@]}"

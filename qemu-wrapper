#!/bin/bash

vda=""
vdb=""
vdc=""
vdd=""
smp=" -smp 16 "
mem=" -m 4g "
daemonize=" -daemonize "
net=nat
printf -v mac_addr '52:54:%02x:%02x:%02x:%02x' $(( $RANDOM & 0xff)) $(( $RANDOM & 0xff )) $(( $RANDOM & 0xff)) $(( $RANDOM & 0xff ))

args=("$@")
for ((i=$(("${#args[@]}" - 1)); i > -1 ; --i)); do
  case ${args[i]} in
  -smp)
    smp=""
    ;;
  -m)
    mem=""
    ;;
  -vda)
    vda=" -drive file=${args[i+1]},if=virtio "
    unset args[i]
    unset args[i+1]
    ;;
  -vdb)
    vdb=" -drive file=${args[i+1]},if=virtio "
    unset args[i]
    unset args[i+1]
    ;;
  -vdc)
    vdc=" -drive file=${args[i+1]},if=virtio "
    unset args[i]
    unset args[i+1]
    ;;
  -vdd)
    vdd=" -drive file=${args[i+1]},if=virtio "
    unset args[i]
    unset args[i+1]
    ;;
  -mac)
    mac_addr=${args[i+1]}
    unset args[i]
    unset args[i+1]
    ;;
  -br)
    net=bridge
    unset args[i]
    ;;
  -nod)
    daemonize=""
    unset args[i]
    ;;
  esac
done

qemu-system-x86_64 -enable-kvm $smp $mem -netdev tap,id=tap0,script=/etc/qemu-wrapper-ifup-$net -device virtio-net,netdev=tap0,mac=$mac_addr $vda $vdb $vdc $vdd "${args[@]}" $daemonize

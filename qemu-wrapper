#!/bin/bash

smp=" -smp 4,sockets=1,cores=4 "
mem=" -m 4g "
net=bridge
printf -v mac_addr '52:54:%02x:%02x:%02x:%02x' $(($RANDOM & 0xff)) $(($RANDOM & 0xff)) $(($RANDOM & 0xff)) $(($RANDOM & 0xff))
export eth=enp5s0
args=()

while test $# -gt 0
do
  case $1 in
  -smp)
    smp=""
    args+=("$1")
    ;;
  -m)
    mem=""
    args+=("$1")
    ;;
  -mac)
    mac_addr="$2"
    shift
    ;;
  -eth)
    eth="$2"
    shift
    ;;
  -br)
    net=bridge
    ;;
  -nat)
    net=nat
    ;;
  -rvd)
    args+=("-drive")
    args+=("file=$2,format=raw,if=virtio")
    shift
    ;;
  -qvd)
    args+=("-drive")
    args+=("file=$2,format=qcow2,if=virtio")
    shift
    ;;
  *)
    args+=("$1")
    ;;
  esac
  shift
done

qemu-system-x86_64 -machine q35,accel=kvm $smp $mem -netdev tap,id=tap0,script=/etc/qemu-wrapper-ifup-$net -device virtio-net,netdev=tap0,mac="$mac_addr" "${args[@]}"

